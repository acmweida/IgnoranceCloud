page{
    width: 100%;
}

.container {
    background-color: white;
    display: flex;
    padding: 6% 2% 0% 2%;
    flex-direction: row;
    justify-content: space-between;
}

.headline {
    margin-top: 20rpx;
    font-size: 40rpx;
    font-family: STXingkai;
    font-weight: 500;
    color: #2f2f2f;
    margin-bottom: 20rpx;
}

.books-container {
    margin-top: 10rpx;
    margin-left: 2%;
    margin-right: 2%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.books-container v-book{
    margin-bottom: 10rpx;
}

.sub-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 100%;
}

.songlist-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
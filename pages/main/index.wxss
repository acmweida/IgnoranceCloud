/* pages/main/index.wxss */
.container {
    position: absolute;
    display: flex;
    height: 20%;
    width: 100%;
    padding: 0% 1% 0% 1%;
}

.top-container {
    display:  flex;
    width: 100%;
    position: relative;
    flex-flow: row;
}

.sub-container {
    display:  flex;
    width: 100%;
    position: relative;
    flex-flow: row;
    justify-content: center;
}

.img {
    height: 80rpx;
    width: 80rpx;
}

.nai-text {
    height: 100%;
    display: flex;
    align-items: center;
    vertical-align: center;
    justify-content: center;
    flex-direction: row;
    margin-left: 20rpx;
    font-size: 36rpx;
}

.nai-text_checked  {
    font-size: 42rpx;
    font-weight: 500rpx;
}
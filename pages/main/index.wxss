/* pages/main/index.wxss */
.container {
    position: absolute;
    display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    padding: 0% 1% 1% 0%;
}

.top-container {
    display:  flex;
    width: 100%;
    height: 9%;
    position: relative;
    flex-flow: row;
}

.sub-container {
    display:  flex;
    width: 100%;
    position: relative;
    flex-flow: row;
    justify-content: space-between;
    margin-right: 10%;
    margin-left: 10%;
}

.img {
    height: 100%;
    
}

.main-container {
  height: 91%;
  
  margin-right: 10rpx;
  display: flex;
  flex-direction: row;
}

.left_imge {
  margin-left: 10rpx;
}

.right_image {
   margin-right: 10rpx;
}

.nai-text {
    height: 100%;
    display: flex;
    align-items: center;
    vertical-align: center;
    justify-content: center;
    flex-direction: row;
    font-size: 36rpx;
    font-family: STXingkai;
}

.nai-text_checked  {
    font-size: 42rpx;
    font-family: STXingkai;
    font-weight: 500rpx;
}

.swiper {
  width: 100%;
  height: 100%;
  overflow: auto;
}

.scroll_view {
  height: 100%;
}
.topView{
    display: flex;
}
.topView{
    height:180px;
}
.imgView{
    display: flex;
    justify-content: center;
    align-items: center;
    width:50%;
}
.briefView{
    padding:30px 5px;
    width: 50%;
}
.name{
    color:white;
    font-family: STXingkai;
}
.description{
    width: 100%; 
    color: black;
    font-size:12px;
    font-family: STXingkai;
    overflow: hidden; 
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:3; 
    text-overflow: ellipsis;
}
.imgView image{
    width:120px;
    height:120px;
}
.playAll{
    width: 100%;
    height:40px;
    padding: 20px;
    border-top-left-radius: 60rpx;
    border-top-right-radius: 60rpx;
    display: flex;
    box-sizing: border-box;
    border-bottom: 1px solid rgb(214,214,214);
}
.playallImg{
    width:20px;
    height: 20px;
    /* display: inline-block; */
}
.playallText{
    /* display: inline-block; */
    margin-left: 20px;
    line-height: 20px;
    font-size: 15px;
    font-family: STXingkai;
    color: gray;
}
.item{
    width: 100%;
    height:45px;
    display: flex;
}
.index{
    width: 10%;
    padding:5px;
    text-align: center;
}
.rightView{
    width: 90%;
    padding: 5px;
    border-bottom: 1px solid rgba(214,214,214,0.5);    
}
.song-title{
    font-size:12px;
    font-family: STXingkai;
}
.singer{
    height: 40rpx;
    font-size:20rpx;
    font-family: STXingkai;
}
/* 背景模糊 */
.bg{
    position: absolute;
    left: 0;
    top: 0;
    z-index: -10;
    width: 100%;
    height: 180px;
    background:  no-repeat left top;
    background-size: 110% 110%;
    background-color: rgba(63,63,62,0.1);
    filter: blur(20px)
}
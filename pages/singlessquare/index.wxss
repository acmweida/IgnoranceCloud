.container {
  position: absolute;
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  padding: 0% 1% 1% 0%;
}

.border {
  height: 4rpx;
  width: 100%;
  background: red;
}

.title {
  font-size: 48rpx;
  margin-left: 30rpx;
  font-family: STXingkai;
}

.scroll_conatiner {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 84rpx;
}

.img {
  width: 64rpx;
  height: 64rpx;
}

scroll-view {
  width: 100%;
  white-space: nowrap;
}

.scrill-item-x {
  width: 25%;
  height: 60rpx;
  font-size: 36rpx;
  font-family: STXingkai;
  background-color: #FFFFFF;
  display: inline-block;
  justify-content: center;
  align-content: center;
}

.choose {
  display: flex; 
  align-items: center; 
  vertical-align: center; 
  justify-content: center; 
  flex-direction: row;
}
.scroll_sub {
  width: 90%;
}

::-webkit-scrollbar {  /*隐藏滚动条*/
  width: 0;
  height: 0;
  color:transparent;
}

.songlist-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.sub-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 100%;
}

.books-container {
  margin-top: 20rpx;
  margin-left: 2%;
  margin-right: 2%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.books-container v-book{
  margin-bottom: 10rpx;
}